{
  "name": "michelin-star-hunter-backend",
  "version": "1.0.0",
  "description": "Backend API for Michelin Star Hunter",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "npx prisma migrate deploy && npx prisma db seed && node dist/server.js",
    "migrate": "npx prisma migrate dev",
    "migrate:reset": "npx prisma migrate reset",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "create-admin": "ts-node scripts/create-admin.ts",
    "scrape-michelin": "cd scripts && npm install && npm run scrape",
    "seed-production": "cd scripts && npm install && npm run seed-production",
    "seed-production-clear": "cd scripts && npm install && npm run seed-production-clear",
    "refresh-restaurants": "npm run scrape-michelin && npm run seed-production-clear",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:verbose": "jest --verbose --runInBand"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "prisma": "^6.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.8.10",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
