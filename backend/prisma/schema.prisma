generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String      @id @default(cuid())
  username                String      @unique
  email                   String      @unique
  passwordHash            String      @map("password_hash")
  admin                   Boolean     @default(false)
  totalScore              Int         @default(0) @map("total_score")
  restaurantsVisitedCount Int         @default(0) @map("restaurants_visited_count")
  createdAt               DateTime    @default(now()) @map("created_at")
  updatedAt               DateTime    @updatedAt @map("updated_at")

  visits      UserVisit[]
  wishlists   Wishlist[]
  travelPlans TravelPlan[]

  @@map("users")
}

model Restaurant {
  id                String   @id @default(cuid())
  name              String
  city              String
  country           String
  cuisineType       String   @map("cuisine_type")
  michelinStars     Int      @map("michelin_stars")
  distinction       String?
  yearAwarded       Int      @map("year_awarded")
  address           String
  latitude          Float?
  longitude         Float?
  description       String?
  imageUrl          String?  @map("image_url")
  phone             String?
  website           String?
  michelinUrl       String?  @map("michelin_url")
  bookingWindowDays Int?     @map("booking_window_days")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  visits              UserVisit[]
  wishlists           Wishlist[]
  travelPlanRestaurants TravelPlanRestaurant[]

  @@index([country, city])
  @@index([michelinStars])
  @@index([cuisineType])
  @@map("restaurants")
}

model UserVisit {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  restaurantId String    @map("restaurant_id")
  dateVisited  DateTime  @map("date_visited")
  notes        String?
  bestDish     String?   @map("best_dish")
  occasion     String?
  moodRating   Int?      @map("mood_rating")
  createdAt    DateTime  @default(now()) @map("created_at")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([restaurantId])
  @@index([userId, restaurantId])
  @@map("user_visits")
}

model RawData {
  id            String   @id @default(cuid())
  name          String
  city          String
  country       String
  cuisineType   String   @map("cuisine_type")
  michelinStars Int      @map("michelin_stars")
  yearAwarded   Int?     @map("year_awarded")
  address       String?
  latitude      Float?
  longitude     Float?
  description   String?
  imageUrl      String?  @map("image_url")
  phone         String?
  website       String?
  michelinUrl   String?  @map("michelin_url")
  distinction   String?
  scrapeDate    DateTime @default(now()) @map("scrape_date")
  processed     Boolean  @default(false)
  createdAt     DateTime @default(now()) @map("created_at")

  @@index([processed])
  @@index([scrapeDate])
  @@map("raw_data")
}

model Wishlist {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  restaurantId String   @map("restaurant_id")
  note         String?
  createdAt    DateTime @default(now()) @map("created_at")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([userId, restaurantId])
  @@index([userId])
  @@index([restaurantId])
  @@map("wishlists")
}

model TravelPlan {
  id                   String   @id @default(cuid())
  userId               String   @map("user_id")
  city                 String
  country              String?
  startDate            DateTime @map("start_date")
  endDate              DateTime @map("end_date")
  maxStarsPerDay       Int?     @map("max_stars_per_day")
  preferredCuisines    String[] @map("preferred_cuisines")
  includeVisited       Boolean  @default(false) @map("include_visited")
  shareToken           String?  @unique @map("share_token")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  user        User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurants TravelPlanRestaurant[]

  @@index([userId])
  @@index([city])
  @@index([shareToken])
  @@map("travel_plans")
}

model TravelPlanRestaurant {
  id           String   @id @default(cuid())
  travelPlanId String   @map("travel_plan_id")
  restaurantId String   @map("restaurant_id")
  day          Int
  mealType     String   @map("meal_type") // "lunch" or "dinner"
  order        Int      // Order within the day
  createdAt    DateTime @default(now()) @map("created_at")

  travelPlan TravelPlan @relation(fields: [travelPlanId], references: [id], onDelete: Cascade)
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([travelPlanId, restaurantId])
  @@index([travelPlanId])
  @@index([restaurantId])
  @@map("travel_plan_restaurants")
}